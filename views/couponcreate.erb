<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3>Please add a coupon:</h3>
        <form action='/coupon/create' method="post">
          <input class="form-control" type="text" name="title" value="" placeholder="Title">
          <input class="form-control" type="text" name="description" value="" placeholder="Description">
          <input class="form-control" type="text" name="product" value="" placeholder="Product">
          <input class="form-control" type="text" name="discount_price" value="" placeholder="Discount Price(EX: 4.99)">
          <input class="form-control" type="date" name="expiration_date" value="">
          <input class="btn btn-danger form-control" type="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>
</section>



